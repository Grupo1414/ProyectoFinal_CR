<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icono"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icono"
        android:supportsRtl="true"
        tools:targetApi="31">

        <!-- Actividad principal -->
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppTheme"
            android:exported="true">

            <!-- Filtro de intent -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".RegisterPage"
            android:theme="@style/AppTheme" />
        <activity android:name=".CartActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".CartAdapter"
            android:theme="@style/AppTheme" />
        <activity android:name=".CartaPrincipal"
            android:theme="@style/AppTheme" />
        <activity android:name=".DetalleProducto"
            android:theme="@style/AppTheme" />
        <activity android:name=".PaymentActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".PasarelaPago"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ResumenPedidoAdapter"
            android:theme="@style/AppTheme"/>
        <activity android:name=".ResumenPedidosActivity"
            android:theme="@style/AppTheme"/>

    </application>
</manifest>