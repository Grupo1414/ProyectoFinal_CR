<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permisos -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icono"
        android:label="Grupo 14"
        android:roundIcon="@drawable/icono"
        android:supportsRtl="true"
        tools:targetApi="31">

        <!-- Actividad principal -->
        <activity
            android:name=".Login.Login"
            android:theme="@style/AppTheme"
            android:exported="true">

            <!-- Filtro de intent -->
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Login.RegisterPage"
            android:theme="@style/AppTheme" />
        <activity android:name=".Carrito.CartActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".Carrito.CartAdapter"
            android:theme="@style/AppTheme" />
        <activity android:name=".Carta.CartaPrincipal"
            android:theme="@style/AppTheme" />
        <activity android:name=".Carta.DetalleProducto"
            android:theme="@style/AppTheme" />
        <activity android:name=".Pago.PaymentActivity"
            android:theme="@style/AppTheme" />
        <activity android:name=".Pago.PasarelaPago"
            android:theme="@style/AppTheme"/>
        <activity android:name=".HistorialPedidos.ResumenPedidoAdapter"
            android:theme="@style/AppTheme"/>
        <activity android:name=".HistorialPedidos.ResumenPedidosActivity"
            android:theme="@style/AppTheme"/>

    </application>
</manifest>